<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/company_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="@string/pick_a_company"
        android:textSize="22sp"
        app:met_floatingLabel="normal"
        app:met_textColor="@android:color/background_dark" />

    <LinearLayout
        android:id="@+id/currentStockPrice_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_spinner"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/current_price"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/currentStockPrice_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/n_a"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dailyHigh_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentStockPrice_linearLayout"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/daily_high"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/dailyHigh_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/n_a"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dailyLow_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dailyHigh_linearLayout"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/daily_low"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/dailyLow_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/n_a"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stocksInMarket_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dailyLow_linearLayout"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/stocks_in_market"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/stocksInMarket_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/n_a"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stocksInMarket_linearLayout"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/stocks_in_exchange"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/stocksInExchange_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/n_a"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="22sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/stockExchange_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="2dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/stocks_exchange_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buyExchange_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/noOfStocks_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/number_of_stocks"
            android:inputType="number"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/buyExchange_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:text="@string/buy_stocks"
        android:textColor="@android:color/white" />

</RelativeLayout>