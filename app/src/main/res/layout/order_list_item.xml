<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orders_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <TextView
        android:id="@+id/orderType_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/black_green_rounded_button"
        android:text="@string/cancel"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/company_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/orderType_textView"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/orderStatus_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/company_textView"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/orderPrice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/orderStatus_textView"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/stockDisplay_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="@android:color/holo_orange_dark"
        android:layout_below="@id/orderPrice_textView"
        android:layout_margin="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/stockDisplay_seekBar"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_dark" />

</RelativeLayout>